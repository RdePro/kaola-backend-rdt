{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "../tsout",
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "importHelpers": true,
        "moduleResolution": "node",
        "allowJs": true,
        "noImplicitAny": false,
        "strictFunctionTypes": false,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "../app/typings",
            "../template/typings"
        ],
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "vue$": [
                "vue/dist/vue.esm.js"
            ],
            "~/*": [
                "src/base/*"
            ],
            "app/*": [
                "../app/*"
            ]
        },
        "lib": [
            "es6",
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "../app/**/*.ts",
        "../app/**/*.tsx",
        "../app/**/*.vue",
        "../template/**/*.ts",
        "../template/**/*.tsx",
        "../template/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "_docs"
    ]
}
